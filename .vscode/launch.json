{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Vitest (single file)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--inspect-brk"],
      "program": "${workspaceFolder}/game/node_modules/vitest/vitest.mjs",
      "args": ["--run", "${file}"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}