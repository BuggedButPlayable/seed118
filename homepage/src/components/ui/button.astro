---
interface Props {
   as?: 'button' | 'a';
   href?: string;
   variant?:
      | 'default'
      | 'destructive'
      | 'outline'
      | 'secondary'
      | 'ghost'
      | 'link'
      | 'none';
   size?: 'default' | 'sm' | 'lg' | 'icon' | 'none';
   type?: 'button' | 'submit' | 'reset';
   disabled?: boolean;
   class?: string;
   [key: string]: any;
   startIcon?: any;
   endIcon?: any;
}
const {
   as = 'button',
   href,
   variant = 'default',
   size = 'default',
   type = 'button',
   disabled = false,
   class: className = '',
   startIcon,
   endIcon,
   ...attrs
} = Astro.props;

function isElement(v: any) {
   return typeof v === 'object' && v !== null && (v.type || v.$$typeof);
}

const StartIconRef = startIcon && !isElement(startIcon) ? startIcon : null;
const EndIconRef = endIcon && !isElement(endIcon) ? endIcon : null;
const StartIconEl = startIcon && isElement(startIcon) ? startIcon : null;
const EndIconEl = endIcon && isElement(endIcon) ? endIcon : null;

const isDisabled = Boolean(disabled);

const base =
   "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-all disabled:pointer-events-none disabled:opacity-50 aria-disabled:pointer-events-none aria-disabled:opacity-50 [&_svg]:pointer-events-none [&_svg:not([class*='size-'])]:size-4 shrink-0 [&_svg]:shrink-0 outline-none focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px] aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 aria-invalid:border-destructive";

const variants: Record<string, string> = {
   default: 'bg-primary text-primary-foreground hover:bg-primary/90',
   destructive:
      'bg-destructive text-white hover:bg-destructive/90 focus-visible:ring-destructive/20 dark:focus-visible:ring-destructive/40 dark:bg-destructive/60',
   outline:
      'border bg-background text-foreground hover:bg-accent hover:text-accent-foreground dark:bg-input/30 dark:border-input dark:hover:bg-input/50',
   secondary: 'bg-secondary text-secondary-foreground hover:bg-secondary/80',
   ghost: 'hover:bg-accent hover:text-accent-foreground dark:hover:bg-accent/50',
   link: 'text-primary underline-offset-4 hover:underline underlined',
   none: '',
};

const sizes: Record<string, string> = {
   default: 'h-9 px-4 py-2 has-[>svg]:px-3',
   sm: 'h-8 text-xs rounded-md gap-1.5 px-3 has-[>svg]:px-2.5',
   lg: 'h-10 rounded-md px-6 has-[>svg]:px-4',
   icon: 'size-4 rounded-md',
};

const cls = [className, variant === 'none' ? '' : base, variants[variant], variant === 'none' ? '' : sizes[size]].join(' ');
---

{
   as === 'a' ? (
      <a
         href={isDisabled ? undefined : href}
         class={
            isDisabled
               ? `opacity-50 pointer-events-none ${cls} btn-disabled-a`
               : cls
         }
         role="button"
         aria-disabled={isDisabled ? 'true' : 'false'}
         tabindex={isDisabled ? -1 : undefined}
         {...attrs}
      >
         {StartIconEl || (StartIconRef && <StartIconRef class="h-3 w-3" />)}
         <slot />
         {EndIconEl || (EndIconRef && <EndIconRef class="h-3 w-3" />)}
      </a>
   ) : (
      <button class={cls} type={type} disabled={isDisabled} {...attrs}>
         {StartIconEl || (StartIconRef && <StartIconRef class="h-3 w-3" />)}
         <slot />
         {EndIconEl || (EndIconRef && <EndIconRef class="h-3 w-3" />)}
      </button>
   )
}
