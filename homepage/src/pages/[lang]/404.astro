---
import Button from "../../components/ui/button.astro";
import { PATHS } from "../../configs/paths";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import BaseLayout from "../../layouts/base-layout.astro";

export const getStaticPaths = () => [{ params: { lang: 'en' } }];
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title={t('notFound.title')} description={t('notFound.description')}>
   <div class="container mx-auto px-4 py-8 text-center">
      <h1 class="text-3xl mb-4">{t('notFound.title')}</h1>
      <p class="text-muted-foreground mb-8">
         {t('notFound.message')}
      </p>
      <div class="space-y-4">
         <Button
            as="a"
            href={PATHS.HOME.getHref(lang)}
            class="block mx-auto px-6 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors"
         >
            {t('notFound.home')}
         </Button>
      </div>
   </div>
</BaseLayout>
