---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import BaseLayout from './base-layout.astro';
import Breadcrumb from '../components/ui/breadcrumb.astro';
import Header from '../components/header.astro';

interface Props {
   keywords?: string;
   title?: string;
   description?: string;
}

const { keywords = '', title = '', description = '' } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export function getStaticPaths() {
   return [{ params: { lang: 'en' } }];
}
---

<BaseLayout title={title} description={description} keywords={keywords}>
   <div class="flex flex-col gap-8">
      <Breadcrumb />
      <div class="flex items-start justify-between mb-8">
         <div>
            <h1 class="text-2xl md:text-3xl font-medium text-foreground mb-2">
               {title}
            </h1>
            <p class="text-muted-foreground hide-in-focus-mode">
               {description}
            </p>
         </div>
      </div>
   </div>

   <slot />
</BaseLayout>
